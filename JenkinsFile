pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git branch:'main',url:'https://github.com/Katsuo18/Jenkins'
            }
        }
        stage('Install') {
            steps {
                echo 'Instalando' 
            }
        }
        stage('Test')
        {
            steps {
                echo 'Testing'
            }
        }
        stage('Deploy'){
            steps {
                sh 'docker build -t jenkins-test .'
                sh 'docker run -d -p 8080:8080 jenkins-test'
            }
        }
    }
    post {
        always {
            echo 'Enviando Mensaje a mmunozc40@iescastelar.com'
        }
        success {
            echo 'El pipeline terminó con éxito'
        }
        failure {
            echo 'Algo falló en el pipeline'
        }
      }
}
