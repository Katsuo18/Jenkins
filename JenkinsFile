pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git branch:'main',url:'https://github.com/Katsuo18/Jenkins'
            }
        }
        stage('Install') {
            steps {
                echo 'Instalando' 
            }
        }
        stage('Test')
        {
            steps {
                echo 'Testing'
            }
        }
        stage('Deploy'){
            steps {
                sh 'cd /home/alumno/Descargas/getting-started-app-main'
                sh 'docker build -t jenkins-test .'
                sh 'docker run -d -p 8081:8080 jenkins-test'
            }
        }
    }
    post {
        always {
            echo 'Enviando Mensaje a mmunozc40@iescastelar.com'
        }
        success {
            mail to: 'mmunozc40@iescastelar.com',
            subject: 'Pipeline Exitoso',
            body: 'El pipeline se ha ejecutado correctamente.'
        }
        failure {
            mail to: 'mmunozc40@iescastelar.com',
            subject: 'Pipeline Fallido',
            body: 'El pipeline ha fallado. Por favor, revisa los logs para m√°s detalles.'
        }
      }
}
